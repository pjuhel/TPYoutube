<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_screen_slide_page.xml -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:id="@+id/imagePageViewer"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="182dp"
            android:layout_height="28dp"
            android:text="title"
            android:id="@+id/videoTitle"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/imagePageViewer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="137dp"
            android:layout_height="30dp"
            android:text="Channel"
            android:id="@+id/channelTitle"
            android:layout_alignTop="@+id/videoTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="136dp"
            android:layout_height="27dp"
            android:text="publishedat"
            android:id="@+id/publishedAt"
            android:layout_below="@+id/videoTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:text="desc"
            android:id="@+id/description"
            android:layout_below="@+id/publishedAt"
            android:layout_alignRight="@+id/publishedAt"
            android:layout_alignEnd="@+id/publishedAt"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</ScrollView>